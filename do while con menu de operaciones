#include <iostream>

using namespace std;

int main()
{
  int a,b,r,opcion;
  do{
  cout<<"Ingresar a:  ";cin>>a;
  cout<<"Ingresar b:  ";cin>>b;
  
  cout<<" --------Menu-------"<<endl;
  cout<<" 1. Suma   "         <<endl;
  cout<<" 2. Resta  "         <<endl;
  cout<<" 3. Multiplicacion  "<<endl;
  cout<<" 4. Division  "      <<endl;
  cout<<" 0. Salir       "    <<endl;
  cout<<"--------------------"<<endl;
  cout<<" Opcion: ";cin>>opcion;
  
  switch(opcion)
 { case 1:r=a+b;break;
   case 2:r=a-b;break;
   case 3:r=a*b;break;
   case 4:r=a/b;break;
   case 0: cout<<"---------END--------"<<endl;break; //para que se ejecute con la opcion 0
   default: cout<<"Opcion invalida "<<endl;
 }
 if((opcion>=1)&&(opcion<=4))
 cout<<" El resultado es:  "<<r<<endl;
 }while (opcion!=0);
    return 0;
}
