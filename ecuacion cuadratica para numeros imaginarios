#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    float a,b,c,d;
    cout<<"ingresar el valor de a : ";cin>>a;
    cout<<"ingresar el valor de b : ";cin>>b;
    cout<<"ingresar el valor de c : ";cin>>c;
    d= b*b-4*a*c;
    if (d<0)
    {
    cout<<"la ecuacion tiene resultados imaginarios"<<endl;
    
   
    
    float xR,xi;
    xR= -b/(2*a);
    xi= sqrt(-d)/(2*a);
    cout<<"el resultado de la ecuacion es: "<<xR<<"+"<<xi<<"i"<<endl;
    cout<<"el resultado de la ecuacion es: "<<xR<<"-"<<xi<<"i"<<endl;
    }
}
    
