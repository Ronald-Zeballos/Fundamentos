#include <iostream>
using namespace std;
int main()
{
	int N, M, contador, cantidadNumeros;
	double promedio, suma=0;
	do {

		cout << "ingresar el valor de M: " << endl;
		cin >> M;
	} while (M < 0);
		do {
			cout << "ingresar el valor de N: " << endl;
			cin >> N;
		} while (M > N);

	contador = M;
	while (contador <= N)
	{
		suma = suma + contador;
		contador++;
	}
	promedio = suma / (N - M + 1);
	cout << "la suma de los numeros es: " << suma << endl;
	cout << "el promedio es igual a: " << promedio << endl;


	

	return 0;
}
