#include <iostream>
#include <cmath>

using namespace std;
// dado un logaritmo de forma log2 x-1/8log2 x=B, donde B es un numero dado entre los reales, dado B hallar x
int main()
{
    double B,x;
    while(true){
    cout << "Ingresar el valor de B o aprete 0 para salir: ";
    cin >> B;
    
    if (B==0){
        cout<<"ecuacion terminada :) "<<endl;
        break;
    }
    
    x = pow(pow(2, 8 * B), 1.0 / 7); 
    cout << "El resultado de la ecuaciÃ³n es: " << x << endl;
}
    return 0;
}
